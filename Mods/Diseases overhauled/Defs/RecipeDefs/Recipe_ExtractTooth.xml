<?xml version="1.0" encoding="UTF-8"?>
<RecipeDefs>

	<RecipeDef ParentName="SurgeryFlesh">
		<defName>ExtractTooth</defName>
		<label>extract sore tooth</label>
		<description>Extracts tooth.</description>
		<jobString>Extracting tooth.</jobString>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<workAmount>1000</workAmount>
		<removesHediff>Toothache</removesHediff>
		<hideBodyPartNames>true</hideBodyPartNames>
		<successfullyRemovedHediffMessage>{0} has successfully removed {1}'s sore tooth.</successfullyRemovedHediffMessage>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>Human</li>
			<li>Alien_Orassan</li>
			<li>Norbal</li>
			<li>Alien_Nova</li>
			<li>Alien_Asari</li>
		</recipeUsers>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>2</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>

</RecipeDefs>