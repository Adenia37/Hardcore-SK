<RecipeDefs>

	<RecipeDef>
		<defName>BuildPlasmaPrecision</defName>
		<label>Build C2 Plasma Precision Rifle</label>
		<description>Builds a C2 Plasma Precision Rifle. It is a highly accurate plasma sniper rifle with a low rate of fire. Fires a 2 round burst. This weapon does not need to be reloaded. Targets hit by the beam can catch on fire.</description>
		<jobString>C2 Plasma Precision Rifle</jobString>
		<workAmount>15000</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Interact_Repair</soundWorking>
		<skillRequirements>
				<li>
					<skill>Crafting</skill>
					<minLevel>20</minLevel>
				</li>
			</skillRequirements>
    	<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Plasma_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>13</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Component</li>
					</thingDefs>
				</filter>
				<count>21</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                 </categories>
				</filter>
				<count>75</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plastic</li>
					</thingDefs>
				</filter>
				<count>70</count>
			</li>
		</ingredients>
		<products>
			<Gun_PlasmaPrecision>1</Gun_PlasmaPrecision>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
						<li>Plasma_Component</li>
						<li>Weapon_Parts</li>
						<li>Component</li>
						<li>Plastic</li>
			</thingDefs>
			<categories>
			<li>SLDBar</li>
			<li>USLDBar</li>
            </categories>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>MechWeaponCraftingWorkTable</li>
    </recipeUsers>
	</RecipeDef>

