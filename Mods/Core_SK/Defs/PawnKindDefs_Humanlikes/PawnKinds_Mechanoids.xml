            <shaderType>Cutout</shaderType>
        </dessicatedBodyGraphicData>
    </PawnKindDef>
	<!-- Centipede -->
    <PawnKindDef>
        <defName>Centipede</defName>
        <label>Centipede</label>
        <race>Mechanoid_Centipede</race>
        <combatPower>700</combatPower>
        <defaultFactionType>Mechanoid</defaultFactionType>
        <aiAvoidCover>true</aiAvoidCover>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Mechanoid/Centipede</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>3</drawSize>
                    <shadowData>
                        <volume>(0.6, 0.8, 0.6)</volume>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponMoney>
            <min>8000</min>
            <max>8000</max>
        </weaponMoney>
        <weaponTags>
            <li>MBL3</li>
        </weaponTags>
        <modExtensions>
            <li Class="CombatExtended.LoadoutPropertiesExtension">
                <primaryMagazineCount>
                    <min>3</min>
                    <max>3</max>
                </primaryMagazineCount>
            </li>
        </modExtensions>
    </PawnKindDef>
