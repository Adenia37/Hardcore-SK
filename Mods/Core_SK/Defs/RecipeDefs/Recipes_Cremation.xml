<?xml version="1.0" encoding="utf-8"?>
<RecipeDefs>

	<RecipeDef>
		<defName>CremateCorpse</defName>
		<label>Cremate corpse</label>
		<description>Cremate a corpse into ashes. Produces 4.</description>
		<jobString>Cremating a corpse.</jobString>
		<workAmount>200</workAmount>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Corpses</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<Ash>4</Ash>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>Corpses</li>
			</categories>
			<exceptedCategories>
				<li>CorpsesMechanoid</li>
			</exceptedCategories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Human_Corpse</li>
				<li>Norbal_Corpse</li>
				<li>Alien_Nova_Corpse</li>
				<li>Alien_Orassan_Corpse</li>
				<li>Alien_Asari_Corpse</li>
			</thingDefs>
			<specialFiltersToAllow>
				<li>AllowCorpsesStranger</li>
			</specialFiltersToAllow>
		</defaultIngredientFilter>
		<workSkill>Crafting</workSkill>
    	<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>
	
	
